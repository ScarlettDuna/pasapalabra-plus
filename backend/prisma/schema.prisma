generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int    @id @default(autoincrement())
  name     String
  language String // ES | EN | FR
  type     String // theme | learning

  questions Question[]
  games     Game[]

  @@unique([name, language, type])
}

model Question {
  id         String @id @default(uuid())
  letter     String
  question   String
  answer     String
  language   String // ES | EN | FR
  difficulty String // easy | medium | hard

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  @@unique([letter, language, difficulty, categoryId, question])
  @@index([language, difficulty])
  @@index([letter])
}

model Game {
  id         String @id @default(uuid())
  language   String // ES | EN | FR
  difficulty String // easy | medium | hard

  categoryId Int
  category   Category  @relation(fields: [categoryId], references: [id])
  
  userId     String?
  user       User? @relation(fields: [userId], references: [id])
  
  startedAt  DateTime  @default(now())
  endedAt    DateTime?
  duration   Int?
  
  score      Score?
  
  @@index([language, difficulty, categoryId])
}

model Score {
  id        String   @id @default(uuid())
  correct   Int
  wrong     Int
  duration  Int
  score     Int
  gameId    String   @unique
  game      Game     @relation(fields: [gameId], references: [id])
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  createdAt DateTime @default(now())

  games     Game[]
}

